---
import MainLayout from '../layouts/main-layout.astro';
import QuoteText from '../components/quote.tsx';
import Facebook from '../icons/facebook.tsx';
import Twitter from '../icons/twitter.tsx';
import LinkedIn from '../icons/linkedin.tsx';
import Instagram from '../icons/instagram.tsx';
---

<MainLayout title="CALV Remodeling - About Us">
  <!-- Banner Section -->

  <section class="w-full bg-about h-[50vh] flex justify-center items-end">
    <div
      class="py-[30px] lg:py-[41px] px-[60px] lg:px-[152px] flex flex-col justify-center items-center bg-white rounded-tl-[37px] rounded-tr-[37px] gap-2.5"
    >
      <h1 class="text-[30px] leading-[40px] lg:text-[50px] lg:leading-[62px] font-dm font-semibold capitalize text-primary-200">
        About Us
      </h1>
      <p class="text-base lg:text-[22px] lg:leading-[33px] tracking-tight font-jost text-text-gray">
        <a href="/">Home</a> / About Us
      </p>
    </div>
  </section>

  <!-- Quote Section -->

  <section
    class="w-full px-12 lg:px-0 pt-[100px] lg:pt-[200px] lg:max-w-[1200px] mx-auto flex items-center justify-center"
  >
    <QuoteText
      text="We believe that every space has the potential to be transformed into something extraordinary. Our commitment to quality craftsmanship and attention to detail sets us apart."
      name="CALV Remodeling Team"
    />
  </section>

  <!-- What We Do Section -->

  <section class="w-full pt-[100px] lg:pt-[150px] px-12 lg:px-0 mx-auto lg:max-w-[1200px]">
    <div class="w-full flex flex-col-reverse lg:flex-row justify-between gap-10 items-center">
      <div class="flex flex-col gap-6">
        <h2
          class="text-[30px] text-center lg:text-left font-dm tracking-wide capitalize leading-8 md:leading-[62.50px] md:text-[50px] text-text-blue"
        >
          Our Expertise
        </h2>
        <p
          class="text-base md:text-[22px] lg:max-w-[85%] text-center lg:text-left tracking-tight font-jost text-text-gray leading-[33px]"
        >
          With over 20 years of experience in Miami and South Florida, CALV Remodeling has established itself as a
          premier renovation and remodeling company. We've successfully completed more than 2,500 projects, ranging from
          luxury kitchen renovations to complete home transformations. Our team specializes in both residential and
          commercial remodeling, bringing modern design solutions while respecting Florida's unique architectural
          heritage.
        </p>
      </div>
      <img src="/about1.png" alt="CALV Remodeling project showcase" />
    </div>
  </section>

  <!-- The End Result Section -->

  <section class="w-full pt-[100px] lg:pt-[150px] px-12 lg:px-0 mx-auto lg:max-w-[1200px]">
    <div class="w-full flex flex-col-reverse lg:flex-row-reverse justify-between gap-24 items-center">
      <div class="flex flex-col gap-6">
        <h2
          class="text-[30px] text-center lg:text-left font-dm tracking-wide capitalize leading-8 md:leading-[62.50px] md:text-[50px] text-text-blue"
        >
          Our Commitment
        </h2>
        <p
          class="text-base md:text-[22px] lg:max-w-[95%] text-center lg:text-left tracking-tight font-jost text-text-gray leading-[33px]"
        >
          Based in the heart of Miami, we understand the unique challenges and opportunities of Florida's climate and
          lifestyle. Our team of certified professionals ensures that every project meets the highest standards of
          quality while adhering to local building codes and regulations. From concept to completion, we work closely
          with our clients to deliver results that exceed expectations, on time and within budget.
        </p>
      </div>
      <img src="/about2.png" alt="CALV Remodeling completed project" />
    </div>
  </section>

  <!-- What People Think About Us Section -->
</MainLayout>

<style>
  /* Hide scrollbar for Chrome, Safari and Opera */
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .no-scrollbar {
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }
</style>
